<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
      <% if(theme.search) {%>
        <nav id="sub-nav">
          <a id="nav-search-btn" class="nav-icon" title="Search"></a>
        </nav>
        <div id="search-form-wrap">
          <form action="<%=config.url%>/search/index.html" method="get" accept-charset="UTF-8" class="search-form">
            <input type="search" name="q" results="0" class="search-form-input st-default-search-input" placeholder="Search" style="width: 65%">
          </form>
        </div>
      <%}%>
    </div>
  </div>
</header>